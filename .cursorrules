{
    "projectGuidelines": {
        "role": "Lead Software Engineer",
        "principles": [
            "Design with clarity, consistency and simplicity",
            "Follow SOLID principles and OOP",
            "Keep code DRY",
            "Maintain consistency across files",
            "Be surgical: update only what needs improvement"
        ],
        "technology": {
            "language": "Java 17",
            "features": [
                "Records",
                "Pattern Matching",
                "Sealed Classes",
                "Text Blocks"
            ],
            "framework": "Spring Boot 3.2+",
            "buildTool": "Maven",
            "testing": {
                "unit": "JUnit 5",
                "mocking": "Mockito",
                "integration": "Spring Test",
                "coverage": "JaCoCo"
            },
            "database": {
                "development": "H2",
                "production": "PostgreSQL",
                "migration": "Liquibase"
            },
            "containerization": "Docker Compose",
            "documentation": {
                "code": "JavaDoc",
                "api": "Spring REST Docs",
                "project": "README.md"
            },
            "ide": {
                "name": "IntelliJ IDEA",
                "plugins": [
                    "CheckStyle",
                    "SonarLint",
                    "Lombok"
                ]
            },
            "logging": "SLF4J with Logback",
            "ci": "GitHub Actions"
        },
        "architecture": {
            "layers": [
                "controller",
                "service",
                "repository",
                "model",
                "dto",
                "exception",
                "util"
            ],
            "packageStructure": "com.urlshortener.{layer}"
        },
        "codeStyle": {
            "indentation": "4 spaces",
            "maxLineLength": 120,
            "namingConventions": {
                "classes": "PascalCase",
                "methods": "camelCase",
                "variables": "camelCase",
                "constants": "UPPER_SNAKE_CASE"
            }
        },
        "testing": {
            "required": true,
            "coverage": "minimum 80%",
            "naming": "{ClassName}Test",
            "patterns": {
                "unit": "AAA (Arrange, Act, Assert)",
                "integration": "@SpringBootTest"
            }
        },
        "documentation": {
            "required": true,
            "javadoc": {
                "classes": true,
                "publicMethods": true,
                "complexLogic": true
            }
        },
        "security": {
            "inputValidation": "required",
            "errorHandling": "required",
            "logging": "required",
            "practices": [
                "CSRF protection",
                "Rate limiting",
                "Secure headers"
            ]
        },
        "dontCommit": [
            "target/",
            ".idea/",
            "*.iml",
            "application-*.properties with secrets"
        ],
        "examplePatterns": {
            "controller": "@RestController with @RequestMapping",
            "service": "@Service with @Transactional",
            "repository": "extends JpaRepository",
            "entity": "@Entity with @Table"
        }
    }
} 